<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post"enctype="multipart/form-data" >
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Título" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Subtítulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <input type="file" class="form-control" name="imagen" id="imagen"></input>
                    <label>
                        <p style="text-align: left; margin-top: 10px;">
                            <input type="checkbox" name="img_delete" id="img_delete" value="1">
                            ¿Eliminar imagen actual?
                        </p>
                    </label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                {{message}}
            {{/if}}
        </div>
    </div>
</div>